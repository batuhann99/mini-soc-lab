<group name="custom_rules,">

  <!-- Kural 1: Brute Force Detection -->
  <rule id="100001" level="10" frequency="5" timeframe="60">
    <if_matched_sid>60122</if_matched_sid>
    <description>Brute force attack: 5+ failed logins in 60 seconds</description>
    <mitre>
      <id>T1110</id>
    </mitre>
  </rule>

  <!-- Kural 2: Mimikatz Tespit -->
  <rule id="100002" level="14">
    <if_group>sysmon_event1</if_group>
    <field name="win.eventdata.originalFileName" type="pcre2">(?i)mimikatz</field>
    <description>Mimikatz execution detected</description>
    <mitre>
      <id>T1003</id>
    </mitre>
  </rule>

  <!-- Kural 3: Suspicious PowerShell -->
  <rule id="100003" level="12">
    <if_group>sysmon_event1</if_group>
    <field name="win.eventdata.commandLine" type="pcre2">(?i)(Invoke-Expression|IEX|DownloadString|EncodedCommand|bypass|Invoke-Mimikatz|Invoke-WebRequest.*http)</field>
    <description>Suspicious PowerShell command detected</description>
    <mitre>
      <id>T1059.001</id>
    </mitre>
  </rule>

  <!-- Kural 4: Port Scan Tespit -->
  <rule id="100004" level="10">
    <if_group>sysmon_event3</if_group>
    <field name="win.eventdata.destinationPort" type="pcre2">^(445|3389|22|23|80|443|8080)$</field>
    <description>Possible port scan: connection to common service port</description>
    <mitre>
      <id>T1046</id>
    </mitre>
  </rule>

  <!-- Kural 5: Yeni Servis (Persistence) -->
  <rule id="100005" level="12">
    <if_sid>61600</if_sid>
    <field name="win.system.eventID">^7045$</field>
    <description>New Windows service installed - possible persistence</description>
    <mitre>
      <id>T1543.003</id>
    </mitre>
  </rule>

  <!-- Kural 6: Scheduled Task (Persistence) -->
  <rule id="100006" level="10">
    <if_group>sysmon_event1</if_group>
    <field name="win.eventdata.image" type="pcre2">(?i)schtasks\.exe</field>
    <field name="win.eventdata.commandLine" type="pcre2">(?i)/create</field>
    <description>Scheduled task created - possible persistence</description>
    <mitre>
      <id>T1053.005</id>
    </mitre>
  </rule>

</group>
